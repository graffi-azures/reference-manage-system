<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: lightgrey;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SechpaneController">
    <children>
        <VBox prefHeight="200.0" prefWidth="600.0">
            <children>
                <HBox prefHeight="50.0" prefWidth="600.0">
                    <children>
                        <Button fx:id="btnSearch" mnemonicParsing="false" onMouseReleased="#onMulSearchAction" text="Search">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <MenuButton mnemonicParsing="false" text="options">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Sava Search" />
                                <MenuItem mnemonicParsing="false" text="Load Search" />
                            </items>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </MenuButton>
                    </children>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="600.0">
                    <children>
                        <Label style="-fx-background-color: white;" text="Author:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="70.0" right="10.0" top="15.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="txtAuthor" prefHeight="22.0" prefWidth="350.0">
                            <HBox.margin>
                                <Insets bottom="10.0" left="25.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="600.0">
                    <children>
                        <Label style="-fx-background-color: white;" text="Year:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="70.0" right="10.0" top="15.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="txtYear" prefHeight="22.0" prefWidth="350.0">
                            <HBox.margin>
                                <Insets bottom="10.0" left="40.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="600.0">
                    <children>
                        <Label style="-fx-background-color: white;" text="Title:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="70.0" right="10.0" top="15.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="txtTitle" prefHeight="22.0" prefWidth="350.0">
                            <HBox.margin>
                                <Insets bottom="10.0" left="40.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
